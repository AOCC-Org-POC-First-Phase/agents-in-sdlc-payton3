// Import any necessary dependencies
---

<header class="relative bg-gradient-to-r from-blue-600/90 via-blue-700/90 to-purple-700/90 backdrop-blur-lg text-white shadow-2xl border-b border-blue-500/20 transition-all duration-300">
  <!-- Background decoration -->
  <div class="absolute inset-0 bg-gradient-to-r from-blue-600/20 to-purple-600/20 opacity-50"></div>
  
  <div class="container mx-auto flex justify-between items-center px-6 py-4 relative z-10">
    <div class="flex items-center">
      <div class="relative group">
        <button id="menu-toggle" class="focus:outline-none mr-6 p-2 rounded-xl hover:bg-white/10 transition-all duration-300 group">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 transform transition-transform duration-300 group-hover:scale-110" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
          </svg>
        </button>
        <nav id="menu" class="hidden absolute left-0 mt-4 w-56 bg-slate-900/95 backdrop-blur-xl text-white rounded-2xl shadow-2xl z-20 border border-slate-700/50 overflow-hidden">
          <ul class="py-2">
            <li><a href="/" class="block px-6 py-3 hover:bg-gradient-to-r hover:from-blue-600/20 hover:to-purple-600/20 transition-all duration-300 border-b border-slate-700/30">
              <span class="flex items-center">
                🏠 <span class="ml-3">Home</span>
              </span>
            </a></li>
            <li><a href="/about" class="block px-6 py-3 hover:bg-gradient-to-r hover:from-blue-600/20 hover:to-purple-600/20 transition-all duration-300">
              <span class="flex items-center">
                ℹ️ <span class="ml-3">About</span>
              </span>
            </a></li>
          </ul>
        </nav>
      </div>
      <h1 class="text-2xl font-bold">
        <a href="/" class="hover:text-transparent hover:bg-clip-text hover:bg-gradient-to-r hover:from-blue-200 hover:to-purple-200 transition-all duration-300 flex items-center">
          <span class="text-3xl mr-2">🎯</span>
          Tailspin Toys
        </a>
      </h1>
    </div>
  </div>
</header>

<script>
  // Toggle menu visibility when hamburger is clicked
  const menuToggle = document.getElementById('menu-toggle');
  const menu = document.getElementById('menu');
  
  if (menuToggle && menu) {
    menuToggle.addEventListener('click', () => {
      menu.classList.toggle('hidden');
    });
    
    // Close menu when clicking outside
    document.addEventListener('click', (event) => {
      const isClickInside = menuToggle.contains(event.target as Node) || menu.contains(event.target as Node);
      if (!isClickInside && !menu.classList.contains('hidden')) {
        menu.classList.add('hidden');
      }
    });
  }
</script>